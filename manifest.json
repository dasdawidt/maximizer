{
    "manifest_version": 3,
    "name": "Maximizer",
    "short_name": "Maximizer",
    "version": "0.0.2",
    "description": "Maximize anything! - Your screen is the limit.",
    "author": "David Maier",
    "incognito": "split",
    "icons": {
        "128": "images/128.png",
        "512": "images/512.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ]
}