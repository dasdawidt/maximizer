{
    "manifest_version": 3,
    "name": "__MSG_name__",
    "short_name": "__MSG_shortName__",
    "version": "0.3.0",
    "description": "__MSG_description__",
    "author": "David Maier",
    "incognito": "split",
    "default_locale": "en",
    "icons": {
        "128": "images/128.png",
        "512": "images/512.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "all_frames": true,
            "match_about_blank": true
        }
    ],
    "permissions": ["contextMenus"],
    "web_accessible_resources": [
        {
            "resources": ["images/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
