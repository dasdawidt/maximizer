{
    "manifest_version": 3,
    "name": "Maximizer",
    "short_name": "Maximizer",
    "version": "0.0.1",
    "description": "Maximize anything! - Your screen is the limit.",
    "author": "David Maier",
    "incognito": "split",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "match_about_blank": true
        }
    ],
    "icons": {
        "128": "images/128.png",
        "512": "images/512.png"
    },
    "permissions": [
        "contextMenus"
    ]
}